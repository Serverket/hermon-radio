# Backend env example
PORT=8080
# Optional Postgres (leave empty for in-memory)
DATABASE_URL=
# Admin credentials for Basic Auth
ADMIN_USER=admin
ADMIN_PASS=changeme
# Comma-separated CORS origins (no spaces)
CORS_ORIGINS=http://localhost:5173,https://your-frontend.vercel.app

# Streaming (Node-Media-Server)
# Enable to start RTMP ingest -> HLS output server
STREAM_ENABLE=false

# RTMP ingest and HTTP playback ports
STREAM_RTMP_PORT=1935
STREAM_HTTP_PORT=8000

# Streaming app and stream key auth
# HLS will be served at: http://<host>:${STREAM_HTTP_PORT}/${STREAM_APP}/<streamName>/index.m3u8
STREAM_APP=live
# OBS: set Stream Key to: stream?key=YOUR_SECRET
STREAM_KEY=

# CORS for HLS HTTP server
STREAM_ALLOW_ORIGIN=*

# FFmpeg path and HLS segment params (optimized for low latency)
FFMPEG_PATH=/usr/bin/ffmpeg
STREAM_HLS_TIME=1
STREAM_HLS_LIST_SIZE=3
